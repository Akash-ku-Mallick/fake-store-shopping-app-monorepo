{
  "name": "my-shoping-app",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for User/Admin frontends with shared packages",
  "license": "ISC",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:user": "npm run dev --workspace=user-frontend",
    "build:user": "npm run build --workspace=user-frontend",
    "preview:user": "npm run preview --workspace=user-frontend",
    "dev:admin": "npm run dev --workspace=admin-frontend",
    "build:admin": "npm run build --workspace=admin-frontend",
    "preview:admin": "npm run preview --workspace=admin-frontend",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@reduxjs/toolkit": "^2.8.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.62.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^6.30.1",
    "react-select": "^5.10.2",
    "yup": "^1.7.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@tailwindcss/vite": "^4.1.12",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2"
  },
  "overrides": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-redux": "^9.2.0"
  }
}
